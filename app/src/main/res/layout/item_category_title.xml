<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_category_height"
    android:background="@color/app_theme_background"
    android:orientation="horizontal"
    android:padding="8dp">

    <TextView
        android:id="@+id/category_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/item_category_text_margin"
        android:fontFamily="sans-serif-black"
        android:gravity="center_vertical"
        android:textColor="@color/main_screen_text_color"
        android:textSize="@dimen/item_category_text_size"
        tools:text="In Theaters" />
</LinearLayout>